#INIT: ALL
#INIT: MASTER
#INIT: PROVISION

if [ -f "$WWFUNCTIONS" ]; then
    . $WWFUNCTIONS
else
    echo "ERROR: could not load warewulf functions!"
    exit 255
fi

wwreqroot

DHCP="$(egrep "^\s*dhcp server\s*=" $WAREWULF_SYSCONFDIR/warewulf/provision.conf | awk -F = '{print $2}' | sed -e 's/\s*//g' | tr '[:upper:]' '[:lower:]')"

if [ "$DHCP" = "isc" ]; then
    if wwpackage_check tftp-server tftpd tftpd-hpa; then
        if wwservice_activate tftp.socket tftpd tftp tftpd-hpa; then
            exit 0
        fi
    fi
fi

if [ "$DHCP" = "dnsmasq" ]; then
    if wwpackage_check dnsmasq; then
        if wwservice_activate dnsmasq; then
            exit 0
        fi
    fi
fi

exit 1
